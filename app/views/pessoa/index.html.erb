<table>
  <tr>
    <th>nome</th>
    <th>idade</th>
    <th>email</th>
  </tr>
  
  <% @pessoas.each do |pessoa| %>

    <tr>
      <td> <%= pessoa.nome %> </td>
      <td><%= pessoa.idade %> </td>
      <td><%= pessoa.email %></td>
      <td> <a href="<%= pessoa_show_path(pessoa.id)	%>"> show</a> </td>
      <td> <a data-confirm="confirmar ação?" data-method="delete" href="<%= pessoa_delete_path(pessoa.id)	%>"> delete</a> </td>
    </tr>

  <% end %>


</table>
