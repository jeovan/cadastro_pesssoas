<h1>V2 Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @v2_pessoas.each do |v2_pessoa| %>
      <tr>
        <td><%= v2_pessoa.nome %></td>
        <td><%= v2_pessoa.idade %></td>
        <td><%= v2_pessoa.email %></td>
        <td><%#= link_to 'Show', v2_pessoa %></td>
        <td><%#= link_to 'Edit', edit_v2_pessoa_path(v2_pessoa) %></td>
        <td><%#= link_to 'Destroy', v2_pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

